<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/journal_table"
            android:layout_below="@+id/buttonContainer">
            <TableRow
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="Food"
                    android:background="@drawable/table_border"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="Quantity"
                    android:background="@drawable/table_border"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="Calories"
                    android:background="@drawable/table_border"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="Fat"
                    android:background="@drawable/table_border"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="Carbs"
                    android:background="@drawable/table_border"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="Protein"
                    android:background="@drawable/table_border"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonContainer"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_alignParentTop="true"
                android:text="Check summary."
                android:id="@+id/button_checkSummary"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/button_checkSummary"
                android:text="Clear log."
                android:id="@+id/deleteLog"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/deleteLog"
                android:text="Delete dictionary"
                android:id="@+id/deleteDictionary"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>