<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_dictionary_table"
        android:backgroundTint="@color/material_deep_teal_500">
    </TableLayout>


    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_dictionary_table"
        android:layout_marginLeft="50dp"
        android:id="@+id/numberPicker"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="servings consumed"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/numberPicker"
        android:layout_toRightOf="@+id/numberPicker"
        android:layout_toEndOf="@+id/numberPicker"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="50dp"/>


</RelativeLayout>